<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:paddingVertical="6dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserLatestMessage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLatestPartnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgUserLatestMessage"
        tools:text="Name Name"
        app:layout_constraintTop_toTopOf="@id/imgUserLatestMessage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvLatestChatContent"
        tools:text="content content content"
        app:layout_constraintStart_toStartOf="@id/tvLatestPartnerName"
        app:layout_constraintTop_toBottomOf="@id/tvLatestPartnerName"/>

</androidx.constraintlayout.widget.ConstraintLayout>