<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:theme="@style/ActionBarWhite"
    android:paddingHorizontal="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgOnlineUser"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="5dp"
        android:padding="4dp"
        android:src="@drawable/setting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/imgOnlineUser"
        app:layout_constraintEnd_toEndOf="@id/imgOnlineUser"
        app:layout_constraintTop_toBottomOf="@id/imgOnlineUser"
        android:text="Name"
        android:textSize="14sp"
        app:layout_constraintWidth_default="spread"/>

</androidx.constraintlayout.widget.ConstraintLayout>