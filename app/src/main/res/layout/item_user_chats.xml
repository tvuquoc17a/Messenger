<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/ActionBarWhite">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgUserLatestChat"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_setting"/>

    <TextView
        android:id="@+id/tvUserNameLatestChat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgUserLatestChat"
        app:layout_constraintTop_toTopOf="@id/imgUserLatestChat"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvContentLatestChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tvUserNameLatestChat"
        app:layout_constraintTop_toBottomOf="@id/tvUserNameLatestChat"
        tools:text="Content" />

    <TextView
        android:id="@+id/tvTimeLatestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/tvContentLatestChat"
        app:layout_constraintTop_toTopOf="@id/tvContentLatestChat"
        tools:text="Time" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgStatusLatestMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="@id/tvContentLatestChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvUserNameLatestChat" />

</androidx.constraintlayout.widget.ConstraintLayout>